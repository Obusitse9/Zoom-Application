<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Graph"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toEndOf="@id/bt_acc"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_acc"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp" />


    <TextView
        android:id="@+id/tv_acc_z_max"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Acc z max : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_acc"
        app:layout_constraintTop_toBottomOf="@+id/tv_acc_y_max"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_acc_y_max"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Acc y max : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_acc"
        app:layout_constraintTop_toBottomOf="@+id/tv_acc_x_max"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_acc_x_max"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Acc x max: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_acc"
        app:layout_constraintTop_toBottomOf="@+id/tv_acc_y"
        app:layout_constraintVertical_bias="0.19999999" />

    <Button
        android:id="@+id/bt_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Acceleration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/tv_acc_x"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Acceleration x : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_acc"
        app:layout_constraintTop_toBottomOf="@+id/bt_acc"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_acc_y"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Acceleration y : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_acc"
        app:layout_constraintTop_toBottomOf="@+id/tv_acc_x"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_acc_z"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Acceleration z : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_acc"
        app:layout_constraintTop_toBottomOf="@+id/tv_acc_y"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
